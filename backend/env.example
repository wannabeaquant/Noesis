# NOESIS Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=sqlite:///./noesis.db

# Twitter API v2 (Optional - for Twitter data collection)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API (Optional - for Reddit data collection)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=NOESIS_Bot/1.0

# News API (Optional - for news data collection)
NEWS_API_KEY=your_news_api_key_here

# Weather API (Optional - for weather data collection)
WEATHER_API_KEY=your_weather_api_key_here

# Telegram API (Optional - for Telegram bot alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Email Configuration (Optional - for email alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=data_refresh.log

# Development
DEBUG=false
ENVIRONMENT=development 